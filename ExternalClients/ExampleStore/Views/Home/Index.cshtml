@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm("Pay", "Home", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.itemDetails.Name, "Selected Item")
        @Html.TextBoxFor(m => m.itemDetails.Name, new { @readonly = true, @class = "form-control" })
    </div>
    <br/>
    <div class="form-group">
        @Html.LabelFor(m => m.itemDetails.Price, "Price")
        @Html.TextBoxFor(m => m.itemDetails.Price, new { @readonly = true, @class = "form-control"})
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.CustomerCode, "Your username")
        @Html.TextBoxFor(m => m.CustomerCode, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CustomerCode)
    </div>
    <br />
    @Html.HiddenFor(m => m.itemDetails.Sku)
    @Html.HiddenFor(m => m.itemDetails.RevenueCode)
    <button class="btn btn-primary">Pay</button>
}
<hr/>

<div class="alert alert-info">Available Quantity: @Model.itemDetails.AvailableQuantity</div>